{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Opportunity tags",
    "description": "Object with list of tags (either standard or custom) relevant to opportunity",
    "examples": [
        {
            "standard_tags": [
                { "name": "Job", "confidence": 0.98 },
                { "name": "Full-time", "confidence": 0.96 },
                { "name": "Backend", "confidence": 0.78 }
            ],
            "custom_tags": [{ "name": "Finance", "confidence": 0.8 }]
        },
        {
            "standard_tags": [
                { "name": "Internship", "confidence": 1.0 },
                { "name": "Frontend", "confidence": 0.98 }
            ],
            "custom_tags": [
                { "name": "React", "confidence": 0.99 },
                { "name": "Tailwind CSS", "confidence": 0.91 }
            ]
        }
    ],
    "type": "object",
    "properties": {
        "standard_tags": {
            "description": "List of standard (pre-defined) tags relevant to opportunity",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "Job",
                            "Internship",
                            "Full-time",
                            "Part-time",
                            "UI/UX",
                            "Design"
                        ]
                    },
                    "confidence": { "$ref": "#/$defs/confidence" }
                },
                "required": ["name", "confidence"],
                "additionalProperties": false
            }
        },
        "custom_tags": {
            "description": "List of custom (non-standard) tags relevant to opportunity",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "confidence": { "$ref": "#/$defs/confidence" }
                },
                "required": ["name", "confidence"],
                "additionalProperties": false
            }
        }
    },
    "required": ["standard_tags", "custom_tags"],
    "$defs": {
        "confidence": {
            "description": "Probability of tag being actually relevant to opportunity",
            "type": "number",
            "exclusiveMinimum": 0.0,
            "maximum": 1.0
        }
    }
}
