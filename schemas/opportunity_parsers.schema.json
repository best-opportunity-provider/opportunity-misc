{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Opportunity",
  "description": "Information about the opportunity for parser",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "link": {
        "description": "Link to the main page of the opportunity",
        "type": "string"
      },
      "form_link": {
        "description": "Link to the form page of the opportunity",
        "type": "string"
      },
  
      "name": {
        "description": "Opportunity Title",
        "type": "string"
      },
      "short_description": {
        "description": "The shortest possible description of the opportunity for placement on the general page with all other opportunities",
        "type": "string"
      },
      "description": {
        "description": "Long and detailed description of the opportunity",
        "type": "string"
      },
      "provider": {
        "description": "Name of the opportunity program organizer",
        "type": "string"
      },
  
      "requirements": {
        "description": "Requirements for the applicant",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "advantages": {
        "description": "Benefits of an opportunity (what experience you can gain, who you can meet, etc.)",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "target_audience": {
        "description": "Who is the opportunity program intended for (medical professionals, IT specialists, etc.)",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "discipline": {
        "description": "List of professional disciplines related to the opportunity",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
  
      "country": {
        "description": "The country where the opportunity is realized",
        "type": "string"
      },
      "city": {
        "description": "The city where the opportunity is realized",
        "type": "string"
      },
      "places": {
        "description": "A list of specific places where the opportunity is realized",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "opportunity_timespan": {
        "description": "Timespan of opportunity",
        "type": "string"
      },
  
      "selection_stages": {
        "description": "Stages of selection for the opportunity program (if any)",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "description": "The name of this stage of selection",
              "type": "string"
            },
            "timespan": {
              "description": "The period of this stage of selection",
              "type": "string"
            },
            "objectives": {
              "description": "List of all tasks for this stage of selection",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["name", "period", "objectives"]
        }
      },
  
      "allowance": {
        "description": "Salary/allowance received on the opportunity",
        "type": "string"
      },
      "expenses": {
        "description": "Possible costs during the opportunity",
        "type": "string"
      },
  
      "additional_sections": {
        "description": "Additional subheadings that describe the opportunity and do not fit into the other points",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "description": "Title of subheading",
              "type": "string"
            },
            "content": {
              "description": "Content of subheading in markdown format",
              "type": "string"
            }
          },
          "required": ["title", "content"]
        }
      },
  
      "tags": {
        "description": "List of tags of the opportunity",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
  
      "form": {
        "description": "Information about the opportunity application form and its fields",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "description": "The name of the field from the HTML \"name\" attribute.",
              "type": "string"
            },
            "type": {
              "description": "Field type",
              "enum": ["string", "email", "number", "choice", "file", "tel", "regex"]
            },
            "required": {
              "description": "Flag indicating whether the field is required to be filled in",
              "type": "boolean"
            },
            "label": {
              "description": "The field label displayed on the site",
              "type": "string"
            },
  
            "parameters": {
              "description": "Parameters for a specific type of field",
              "anyOf": [
                {
                  "description": "Parameters for string field type",
                  "type": "object",
                  "properties": {
                    "max_len": {
                      "description": "Maximum string length",
                      "type": "number"
                    }
                  }
                },
                {
                  "description": "Parameters for email field type",
                  "type": "object",
                  "properties": {
                    "max_len": {
                      "description": "Maximum string length",
                      "type": "number"
                    }
                  }
                },
                {
                  "description": "Parameters for number field type",
                  "type": "object",
                  "properties": {
                    "min": {
                      "description": "Minimum value of a number",
                      "type": "number"
                    },
                    "max": {
                      "description": "Maximum value of a number",
                      "type": "number"
                    }
                  }
                },
                {
                  "description": "Parameters for choice field type",
                  "type": "object",
                  "properties": {
                    "choices": {
                      "description": "List to choose from",
                      "type": "list",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                {
                  "description": "Parameters for file field type",
                  "type": "object",
                  "properties": {
                    "max_size": {
                      "description": "Maximum file size in bytes.",
                      "type": "number"
                    }
                  }
                },
                {
                  "description": "Parameters for tel field type",
                  "type": "object",
                  "properties": {}
                },
                {
                  "description": "Parameters for regex field type",
                  "type": "object",
                  "properties": {
                    "pattern": {
                      "description": "Pattern of a regex",
                      "type": "string"
                    }
                  }
                }
              ]
            }
          },
          "required": ["name", "type", "required", "label", "parameters"]
        }
      }
    },
    "required": ["link", "name", "short_description", "description", "provider"]
  }
}
