{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "array",
    "items": {
        "description": "Selection stage for the opportunity",
        "type": "object",
        "properties": {
            "name": {
                "description": "Name of the selection stage",
                "type": "string",
                "examples": ["Application stage", "Interview"]
            },
            "timespan": {
                "description": "Information regarding selection stage time and duration",
                "type": "string",
                "examples": [
                    "03.03.2025-10.03.2025",
                    "Two weeks after the confirmation email"
                ]
            },
            "description": {
                "description": "Detailed explanation of selection stage tasks",
                "type": "string",
                "examples": [
                    "On this stage we expect you to provide us your medical and billing information via email"
                ]
            }
        },
        "required": ["name", "timespan"]
    }
}
