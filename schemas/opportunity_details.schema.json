{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "requirements": {
      "description": "Requirements for the applicant",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "advantages": {
      "description": "Benefits of an opportunity (what experience you can gain, who you can meet, etc.)",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "target_audience": {
      "description": "Who is the opportunity program intended for (medical professionals, IT specialists, etc.)",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "discipline": {
      "description": "List of professional disciplines related to the opportunity",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "allowance": {
      "description": "Salary/allowance received on the opportunity",
      "type": "string"
    },
    "expenses": {
      "description": "Possible costs during the opportunity",
      "type": "string"
    }
  }
}
